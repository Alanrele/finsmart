{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["frontend/**/*.js", "frontend/**/*.jsx"],
      "env": { "browser": true, "node": false },
      "extends": ["eslint:recommended", "plugin:react/recommended"]
    }
  ],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-console": ["warn"]
  }
}
